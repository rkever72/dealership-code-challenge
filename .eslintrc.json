{
    "extends": "./node_modules/aurelia-tools/.eslintrc.json",
    "parserOptions": {
        "ecmaFeatures": {
            "legacyDecorators": true
        }
    },
    "rules": {
        "no-console": "off",
        "indent": [ "error", 4 ],
        "no-trailing-spaces": "off",
        "new-cap": "off",
        "padded-blocks": "off",
        "no-nested-ternary": "off",
        "comma-dangle": [ "error", "never"
        ]
    }
}
